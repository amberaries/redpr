<section class="form_auth text-center">
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <h1 class="h3 mb-3 font-weight-normal">Please Sign Up</h1>
    <%= render "devise/shared/error_messages", resource: resource %>
    <%= f.text_field :first_name, autofocus: true, class: "form-control", placeholder: "First name" %>
    <%= f.text_field :last_name, class: "form-control", placeholder: "Last name" %>
    <%= f.email_field :email, class: "form-control", placeholder: "Email address", autocomplete: "email" %>
    <%= f.password_field :password, class: "form-control", placeholder: "Password", autocomplete: "new-password" %>
    <%= f.password_field :password_confirmation, class: "form-control", placeholder: "Confirm password", autocomplete: "new-password" %>
    <%= f.submit "Sign up", class: "btn btn-lg btn-primary btn-block" %>
  <% end %>
  <%= render "devise/shared/links" %>
</section>
