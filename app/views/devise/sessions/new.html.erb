<section class="form_auth text-center">
  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <h1 class="h3 mb-3 font-weight-normal">Please Sign In</h1>
    <%= f.email_field :email, autofocus: true, class: "form-control", id: "inputEmail", placeholder: "Email address", autocomplete: "email" %>
    <%= f.password_field :password, class: "form-control", id: "inputPassword", placeholder: "Password", autocomplete: "current-password" %>
    <% if devise_mapping.rememberable? %>
      <div class="checkbox mb-3">
        <%= f.check_box :remember_me %>
        <%= f.label :remember_me %>
      </div>
    <% end %>
    <%= f.submit "Log in", class: "btn btn-lg btn-primary btn-block" %>
  <% end %>
  <%= render "devise/shared/links" %>
</section>
